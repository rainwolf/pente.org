<project default="compile">
	<path id="3rd-party-classpath">
	    <fileset dir="/usr/local/tomcat/webapps/ROOT/WEB-INF/lib/">
	        <include name="*.jar" />
	    </fileset>
	</path>
    <target name="compile">
        <mkdir dir="/usr/local/tomcat/webapps/ROOT/WEB-INF/classes"/>
        <javac srcdir="/usr/local/tomcat/webapps/tmp_src"
               destdir="/usr/local/tomcat/webapps/ROOT/WEB-INF/classes"
               debug="true" debuglevel="lines,vars,source" nowarn="on">
        	<classpath refid="3rd-party-classpath" />
        </javac>
    </target>
</project>
