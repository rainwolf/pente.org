        <filter7>com.jivesoftware.base.filter.QuoteFilter</filter7>
        <filter8>com.jivesoftware.base.filter.Emoticon</filter8>
    </filterClasses>
    <global>
        <filterCount>5</filterCount>
        <filter0>
            <className>com.jivesoftware.base.filter.TextStyle</className>
            <properties>
                <boldEnabled>true</boldEnabled>
                <preformatEnabled>true</preformatEnabled>
                <underlineEnabled>true</underlineEnabled>
                <italicEnabled>true</italicEnabled>
            </properties>
            <filterTypes>24</filterTypes>
        </filter0>
        <filter1>
            <className>com.jivesoftware.base.filter.Emoticon</className>
            <properties>
                <imageURL>images/emoticons</imageURL>
            </properties>
            <filterTypes>24</filterTypes>
        </filter1>
        <filter2>
            <className>com.jivesoftware.base.filter.URLConverter</className>
            <properties>
                <newWindowEnabled>false</newWindowEnabled>
            </properties>
            <filterTypes>24</filterTypes>
        </filter2>
        <filter3>
            <className>com.jivesoftware.base.filter.Newline</className>
            <filterTypes>24</filterTypes>
        </filter3>
        <filter4>
            <className>com.jivesoftware.base.filter.Profanity</className>
            <properties>
                <wordList>ass,shit,fuck,fucker,asshole,shithead,cock,cocksucker,twat,cunt,dickhead</wordList>
            </properties>
            <filterTypes>24</filterTypes>
