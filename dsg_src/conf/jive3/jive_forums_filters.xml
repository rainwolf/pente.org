<?xml version="1.0" encoding="UTF-8"?>
<jiveFilters>
    <filterClasses>
        <filter0>com.jivesoftware.base.filter.HTMLFilter</filter0>
        <filter1>com.jivesoftware.base.filter.Newline</filter1>
        <filter2>com.jivesoftware.base.filter.TextStyle</filter2>
        <filter3>com.jivesoftware.base.filter.URLConverter</filter3>
        <filter4>com.jivesoftware.base.filter.Profanity</filter4>
        <filter5>com.jivesoftware.base.filter.JavaCodeHighlighter</filter5>
